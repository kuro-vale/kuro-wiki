<main class="container">
  <div class="row g-5">
    <div class="col-md-8">
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        <%= @user.username %>'s Wikis 
      </h3>
      <% if @wikis.empty? %>
        <h2 class="text-center mt-3 fst-italic">Nothing to see here</h2>
      <% else %>
        <% @wikis.each do |wiki| %>
          <%= render wiki %>
        <% end %>
        <%= paginate @wikis %>
      <% end %>
    </div>

    <%= render "wiki/aside" %>

  </div>
</main>