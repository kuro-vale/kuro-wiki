<main class="container">
  <div class="row g-5">
    <div class="col-md-8">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        <%= @wiki.title %>
      </h3>

      <strong class="mb-2 text-info"><%= @wiki.category.capitalize %></strong>
      <p class="blog-post-meta"><%= @wiki.created_at.strftime('%B %d, %Y') %> by <a href="#">User</a></p>

      <p><%= simple_format(@wiki.body) %></p>
    </div>

    <%= render "aside" %>

  </div>
</main>
