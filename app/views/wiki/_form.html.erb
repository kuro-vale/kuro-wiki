<%= form_with(model: wiki, class: "d-flex flex-column align-items-center") do |form| %>

  <div class="card mb-3" style="width: -webkit-fill-available; width: -moz-available">
  <% if wiki.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show mx-3 mt-3" role="alert">
      <ul class="mb-0">
        <% wiki.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
    <div class="card-body">
      <div class="mb-3 text-center">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class:"form-control" %>
      </div>

      <div class="mb-3 text-center">
        <%= form.select :category, [["World", "world"], ["Art", "art"], ["Technology", "technology"],
                          ["History", "history"], ["Culture", "culture"], ["Business", "business"],
                          ["Politics", "politics"], ["Philosophy", "philosophy"], ["Science", "science"],
                          ["Health", "health"], ["Religion", "religion"], ["Games", "games"] 
                        ],
                        {include_blank: "Select category"}, {:class => "form-select"} %>
      </div>

      <div class="mb-3 text-center">
        <%= form.label :body, class: "form-label" %>
        <%= form.text_area :body, class:"form-control", style: "height: 40vh;" %>
      </div>

      <div class="text-center">
        <%= form.submit "Submit", :class => "btn btn-outline-success" %>
      </div>
    </div>
  </div>

<% end %>
